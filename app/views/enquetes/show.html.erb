
<p>
  <b>Name:</b>
  <%= @survey.title %>
</p>

<p>
  <b>Description:</b>
  <%= @survey.description %>
</p>


<% if @survey.questions.size > 0  %>
	<b>Questions</b>
	<ul>
		<% @survey.questions.each do |question| %>
			<li><%= question.content %></li>
		<% end %>
	</ul>
<% end %>
<hr>

<h2>User Responses</h2>
<table>
  <tr>
    <th>User</th>
    <% @survey.questions.each do |question| %>
      <th><%= question.content %></th>
    <% end %>
  </tr>
  <% @survey.responses.each do |response| %>  
    <tr>
      <td><%#= raise response.user.inspect %></td>
      <% response.answers.each do |answer| %>
        <td><%= answer.content %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<hr>



<%= link_to 'Edit', edit_enquete_path(@survey) %> |
<%= link_to 'Back', enquetes_path %>
